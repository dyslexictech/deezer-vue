html,
body {
  padding: 0;
  margin: 0;
  height: 100%;
  font-family: 'Roboto', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: #12151b !important;
  color: #eee;
}

#soundwave {
  width: 100%;
  min-height: 100%;
  padding-top: 60px;
  color: #fff;
  background-color: #252a34;
  max-width: 1092px;
  min-width: 1092px;
  box-shadow: 0 0 40px rgba(24, 24, 24, 0.4);
  z-index: 20;
  margin: auto;
  position: relative;
  display: flex;
  flex-direction: column;
}

#soundwave.withBottomPlayer {
  padding-bottom: 60px;
}

.md-tooltip {
  z-index: 100 !important;
  background: rgba(28, 33, 44, 0.8);
  font-size: 12px;
}

.mainBgHolder{
  position: fixed;
  top: 0
  left: 0
  width: 100vw;
  height: 100vh;
  background-image: url("https://images.unsplash.com/photo-1501828983797-9d7f14e0263c?ixlib=rb-0.3.5…EyMDd9&s=f140aad…&auto=format&fit=crop&w=2850&q=80");
  background-size: cover;
}
.mainBgHolder__cover {
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  width 100%
  height 100%
  background-color: rgba(37, 42, 52, 0.80);
}